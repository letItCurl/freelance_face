<div class="w-full">
  <div id="resumes" class="min-w-full mb-6">
    <% if @resume.present? && (@resumes_replicas.count == 0) %>
      <%= render "layouts/shared/notice", notice: 'Click "Generate resume replica"' %>
    <% elsif @resume.nil? %>
      <%= render "layouts/shared/notice", alert: "Create your original resume first" %>
    <% end %>
  </div>

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Resumes</h1>
    <div class="flex justify-end space-x-3">
      <% if @resume.present? %>
        <%= link_to "Generate resume replica", new_resumes_replica_path, class: "rounded py-2 px-4 border-2 border-blue-600 text-blue-600 block font-medium" %>
      <% end %>
      <%= link_to "Edit original resumer", edit_resume_path, class: "rounded py-2 px-4 bg-blue-600 border-2 border-blue-600 text-white block font-medium" %>
    </div>
  </div>

  <% if @resume.present? && (@resumes_replicas.count > 0) %>
    <hr class="mt-6">
    <ul role="list" class="divide-y divide-gray-200">
      <%= render partial: "resume", collection: @resumes_replicas %>
    </ul>
  <% end %>
</div>
