<%= turbo_frame_tag :model_errors do %>
  <% if model.errors.any? %>
    <div id="error_explanation" class="bg-red-50 border border-red-500 text-red-500 px-3 py-2 font-medium rounded-lg mt-3">
      <h2><%= pluralize(model.errors.count, "error") %> prohibited this <%= model.model_name.human %> from being saved:</h2>

      <ul>
        <% model.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
<% end %>
